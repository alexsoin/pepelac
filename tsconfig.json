{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM"],
		"skipLibCheck": true,
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"scripts/*": ["./src/scripts/*"],
			"styles/*": ["./src/styles/*"],
		}
	},
	"include": ["src/**/*.ts"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
